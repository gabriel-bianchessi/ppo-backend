generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Pessoa {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  nome      String    @db.VarChar(255)
  email     String    @db.VarChar(255)
  senha     String    @db.VarChar(255)
  role      Role      @default(USER)
  convites  Convite[]
}

model Tipo {
  id         Int          @id @default(autoincrement())
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  nome       String       @db.VarChar(255)
  descricao  String       @db.Text
  TipoEvento TipoEvento[]
}

model Evento {
  id         Int          @id @default(autoincrement())
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  nome       String       @db.VarChar(255)
  descricao  String       @db.Text
  dataHora   DateTime     @db.DateTime(0)
  convites   Convite[]
  TipoEvento TipoEvento[]
}

model Convite {
  id             Int     @id @default(autoincrement())
  pessoaId       Int
  eventoId       Int
  confimPresenca Boolean
  evento         Evento  @relation(fields: [eventoId], references: [id])
  pessoa         Pessoa  @relation(fields: [pessoaId], references: [id])

  @@index([eventoId], map: "Convite_eventoId_fkey")
  @@index([pessoaId], map: "Convite_pessoaId_fkey")
}

model TipoEvento {
  id       Int    @id @default(autoincrement())
  eventoId Int
  tipoId   Int
  evento   Evento @relation(fields: [eventoId], references: [id])
  tipo     Tipo   @relation(fields: [tipoId], references: [id])

  @@index([eventoId], map: "TipoEvento_eventoId_fkey")
  @@index([tipoId], map: "TipoEvento_tipoId_fkey")
}

enum Role {
  USER
  ADMIN
}
