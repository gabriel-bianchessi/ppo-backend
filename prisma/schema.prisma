generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Tipo {
  id         String       @id
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  nome       String       @db.VarChar(255)
  descricao  String       @db.Text
  TipoEvento TipoEvento[]
}

model Evento {
  id         String       @id
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  nome       String       @db.VarChar(255)
  descricao  String       @db.Text
  dataHora   DateTime     @db.DateTime(0)
  convites   Convite[]
  TipoEvento TipoEvento[]
}

model Convite {
  id             Int     @id @default(autoincrement())
  pessoaId       String
  eventoId       String
  confimPresenca Boolean
  evento         Evento  @relation(fields: [eventoId], references: [id])
  Pessoa         Pessoa  @relation(fields: [pessoaId], references: [id])

  @@index([eventoId], map: "Convite_eventoId_fkey")
  @@index([pessoaId], map: "Convite_pessoaId_fkey")
}

model TipoEvento {
  id       Int    @id @default(autoincrement())
  eventoId String
  tipoId   String
  evento   Evento @relation(fields: [eventoId], references: [id])
  tipo     Tipo   @relation(fields: [tipoId], references: [id])

  @@index([eventoId], map: "TipoEvento_eventoId_fkey")
  @@index([tipoId], map: "TipoEvento_tipoId_fkey")
}

model Pessoa {
  id        String      @id
  createdAt DateTime    @default(now())
  updatedAt DateTime
  nome      String      @db.VarChar(255)
  email     String      @db.VarChar(255)
  senha     String      @db.VarChar(255)
  role      Pessoa_role @default(USER)
  Convite   Convite[]
}

enum Pessoa_role {
  USER
  ADMIN
}
